<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom layer: Main rectangle with gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FF9800"
                android:centerColor="#FFA726"
                android:endColor="#FFB74D"
                android:angle="135" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Middle layer: Inner rectangle -->
    <item
        android:left="20dp"
        android:top="20dp"
        android:right="20dp"
        android:bottom="20dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Top layer: Small rectangle with light yellow effect -->
    <item
        android:left="30dp"
        android:top="30dp"
        android:right="30dp"
        android:bottom="30dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFCC" />
            <corners android:radius="4dp" />
        </shape>
    </item>

</layer-list>
