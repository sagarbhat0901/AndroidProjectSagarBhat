<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom layer: Rounded rectangle with gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFE0B2"
                android:endColor="#FFAB91"
                android:angle="135"/>
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Middle layer: Circle in the center -->
    <item
        android:top="24dp"
        android:bottom="24dp"
        android:left="24dp"
        android:right="24dp">
        <shape android:shape="oval">
            <solid android:color="#FFC107" />
        </shape>
    </item>

</layer-list>
